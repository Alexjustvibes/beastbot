{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "env": {
    "node": true
  },
  "rules": {
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "spaced-comment": "off",
    "object-curly-spacing": [
      "warn",
      "never"
    ],
    "indent": [
      "warn",
      4
    ],
    "no-console": "off",
    "max-len": "off"
  }
}
